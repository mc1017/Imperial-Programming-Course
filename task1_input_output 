#include <iostream>
// 1 the header inclusion
// of input output stream
// using namespace std;
#include <string>
int main(){

  std::string first_name, surname;
  // variable declaration
  // std::string is the type for text
  std::cin>> first_name;
  std::cout<<"hello, "<< first_name<< std::endl;
  // std::endl prints a newline
  // 3 printing instruction
  //std means they are part of the standard library of c++
  //cout means console output


}

